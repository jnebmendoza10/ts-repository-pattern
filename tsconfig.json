{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "dist/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src","test"],
    "exclude": ["node_modules"]
}
